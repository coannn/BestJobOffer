<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:text="Compare Offer"
            android:textAlignment="center"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="416dp"
            android:layout_height="362dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/job1ID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/job2ID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <Button
            android:id="@+id/jobReturnID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jobReturnMainMenu"
            android:text="return to main menu" />

        <Button
            android:id="@+id/selectOtherJobID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectOtherJob"
            android:text="select another two jobs" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>